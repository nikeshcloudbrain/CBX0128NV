<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AllVideoPlayer.VhiAllFolderVideoActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adFrameMini"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_ad_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bvideoplayer" />

                <!-- <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/mfont_medium"
                    android:text="All Folder Video Downloader"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:fontFamily="@font/mfont"
                    android:text="@string/intro3"
                    android:textColor="@color/star_gray"
                    android:textSize="@dimen/_11sdp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/mfont_bold"
                        android:text="@string/app_name"
                        android:textAlignment="textStart"
                        android:textColor="@color/startcolor"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_6sdp"

                        android:fontFamily="@font/mfont"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:text="All Video Downloader is one of the best &amp; powerful application
to download Video clips or save video from Social media &amp;
other sites with one tap. It is a Free Video Downloader. You
can download every single file from this application due to its
powerful mechanism.You really need to try this All Video
Downloader."

                        android:textAlignment="textStart"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <!--   <androidx.appcompat.widget.AppCompatImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="?selectableItemBackground"
                             />-->

                        <LinearLayout
                            android:id="@+id/img_allfolder"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_85sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/galleyfolder_1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_56sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:padding="@dimen/_6sdp"
                                android:src="@drawable/fold_11" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/mfont_medium"
                                android:gravity="center"
                                android:text="All Gallery Folder"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>


                    </FrameLayout>


                    <FrameLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"

                        android:orientation="horizontal">

                        <!--  <androidx.appcompat.widget.AppCompatImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="?selectableItemBackground"
                            />-->

                        <LinearLayout
                            android:id="@+id/img_allvideo"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_85sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/gvideo_1"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_56sdp"
                                android:layout_height="@dimen/_56sdp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:padding="@dimen/_5sdp"

                                android:src="@drawable/gvideo_11" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:fontFamily="@font/mfont_medium"
                                android:gravity="center"
                                android:text="All Gallery Video"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_11ssp" />


                        </LinearLayout>


                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        layout="@layout/layout_ad_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>