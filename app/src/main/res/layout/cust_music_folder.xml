<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/folder_drawable"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LLMF_MainClk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ImgM_Folder"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/folder1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ImgM_Play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_newpause"
                android:visibility="gone" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/TVML_FolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mfont_medium"
                android:maxLines="1"
                android:text="Coca Cola Tu"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CrdMF_Use"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_28sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_13sdp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mfont_medium"
                android:maxLines="1"
                android:text="Use"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>