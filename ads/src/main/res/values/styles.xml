<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NormalDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationNormal</item>
    </style>

    <style name="DialogAnimationNormal">
        <item name="android:windowEnterAnimation">@anim/anim_pop_show</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_hide</item>
    </style>


    <style name="styleButton">
        <item name="android:fontFamily">@font/mfont_medium</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="styleButtonSub">
        <item name="android:fontFamily">@font/mfont_medium</item>
        <item name="android:background">@drawable/btn_all</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="textStyleNormal">
        <item name="android:fontFamily">@font/mfont</item>
    </style>

    <style name="textStyleMedium">
        <item name="android:fontFamily">@font/mfont_medium</item>
    </style>

    <style name="textStyleSemiBold">
        <item name="android:fontFamily">@font/mfont_semibold</item>
    </style>

</resources>